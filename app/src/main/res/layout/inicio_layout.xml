<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9FFFFFF"
    android:orientation="vertical"
    tools:context=".InicioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idModeloTituloInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="Top 20 Jogadores da NBA na História"
            android:textColor="#730505"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="ESPN lista os 20 melhores jogadores da história da NBA"
            android:textColor="#730505"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/idImagemTitulo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/folder" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRecRank"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>